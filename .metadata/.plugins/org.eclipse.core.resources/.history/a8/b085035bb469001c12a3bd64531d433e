package recursion;

public class AppendXAtEnd {

	public static String appendAtEnd(String str,char x,int idx,int count) {
		String res = "";
		if(str.charAt(idx)!='x') {
			res.concat(""+str.charAt(idx));
			appendAtEnd(str,x,idx+1,count);
		}else {
			count++;
		}
		for(int i=0;i<count;i++) {
			res = res+"x";
		}
		
		return res;
	}
	
	public static void main(String[] args) {
		String str = "abcdxhxwxy";
		char x = 'x';
		int idx = 0;
		int count = 0;
		String res = appendAtEnd(str,x,idx,count);
		System.out.println(res);

	}

}
