package multithreading;

class BookTicket{
	int TotalSeats=10;
	void book(int seats) {
		if(TotalSeats >= seats && TotalSeats>=0) {
			System.out.println("Seat booked..."+seats);
			TotalSeats = TotalSeats - seats;
		}else {
			System.out.println("Only "+TotalSeats+" are available...");
		}
	}
	
}

public class MovieTicketBook extends Thread{
	static BookTicket b;
	int seats;
	public void run() {
		b.book(seats);
	}

	public static void main(String[] args) {
		b  = new BookTicket();
		MovieTicketBook ashish = new MovieTicketBook();
		ashish.seats = 5;
		ashish.start();
		MovieTicketBook karan  = new MovieTicketBook();
		karan.seats = 7;
		karan.start();
	}

}
